{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar y ejecutar en CMD externa (archivo activo)",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "start",
        "cmd.exe",
        "/k",
        "g++ \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" && \"${fileDirname}\\${fileBasenameNoExtension}.exe\""
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
